    print(f"{YELLOW}üîé Concept Overview{RESET}")
    print(f"{CYAN}{BOLD}‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ{RESET}")
    if category in overview_text:
        print(overview_text[category] + "\n")

    entries = guide[category]
    keywords = [entry["keyword"] for entry in entries]

    print(f"{BWHITE}üìú Summary{RESET}")
    print(f"{CYAN}{BOLD}‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ{RESET}")
